<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <% if teacher_logged_in? %><h3 class="panel-title">成绩管理: <%=@course.name%></h3><% end %>
          <% if student_logged_in? %><h3 class="panel-title">我的成绩</h3><% end %>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <div class="panel-body">
     
          <%= form_tag({}, {:method => :get}) do %>
            <%= label_tag "学年-学期:" %>
            <%= select_tag :year_time, options_for_select(@semesters, :selected=>params[:year_time]), include_blank: "All " %>
            <%= button_tag "query" %>
          <% end %>
          <div>
          <table class="table table-striped table-hover">
            <div>
              <h3 align="center">UCAS 2018-2019 (autumn) GRADES</h3>
              <h5>name:</h5>
              <h5>number:</h5>
            </div>
            <thead>

            <tr>
              <%if teacher_logged_in? %>
                <th>学号</th>
                <th>名字</th>
                <th>专业</th>
                <th>培养单位</th>
              <% end %>
              <%if student_logged_in? %>
                <th>课程编号</th>
                <th>课程名称</th>
                <th>授课老师</th>
              <% end %>
              <th>课时/学分</th>
              <th>是否学位课</th>
              <th>成绩</th>

            </tr>
            </thead>
            <tbody>

            <% @grades.each do |grade| %>
                <tr>
                  <%if teacher_logged_in? %>
                    <td><%= grade.user.num %></td>
                    <td><%= grade.user.name %></td>
                    <td><%= grade.user.major %></td>
                    <td><%= grade.user.department %></td>
                  <% end %>
                  <% if student_logged_in? %>
                    <td><%= grade.course.course_code %></td>
                    <td><%= grade.course.name %></td>
                    <td><%= grade.course.teacher.name %></td>
                  <% end %>
                  <td><%= grade.course.credit %></td>
                  <% if grade.degree?%>
                    <td>是</td>
                  <% else %>
                    <td>否</td>
                  <% end %>
                  <td><%= grade.grade %></td>
                  
                  <% if teacher_logged_in? %>
                  <td>
                    <%= form_for grade, url: grade_url(id: grade.id, course_id: grade.course.id), method: :patch do |f| %>
                          <%= f.text_field :grade %>
                          <%= f.submit "提交", class: "btn btn-success btn-xs" %>
                    <% end %>   
                  </td>            
                  <% end %>                 
                </tr>                
            <% end %>
            </tbody>
          </table>
          <%= will_paginate @grades %>
        </div>
      </div>
    </div>
  </div>
</div>
  </div>
</div>
